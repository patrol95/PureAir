<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/directions_screenshot_init"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="299dp"
        android:layout_height="39dp"
        android:layout_marginTop="560dp"
        android:background="#B3FFFFFF"
        android:text="Choose this location by clicking on it to choose location."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="205dp"
        android:layout_height="54dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="500dp"
        android:background="#B3FFFFFF"
        android:text="This button will show us and center map on our current location."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="153dp"
        android:layout_height="43dp"
        android:layout_marginTop="365dp"
        android:background="#B3FFFFFF"
        android:text="The yellow guy is our current location."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="156dp"
        android:text="This is a compass."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:background="#B3FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="258dp"
        android:layout_height="21dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="68dp"
        android:text="You can search for addresses here."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="423dp"
        android:layout_height="76dp"
        android:layout_marginTop="230dp"
        android:background="#B3FFFFFF"
        android:text="The green-semi transparent fields are the pollution sensors.\nGreen means that the pollution in the location is low.\nYellow means that the pollution in the location is moderate. \nRed means that pollution in the location is high."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/splash4_continue_button"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="567dp"
        android:background="#B3000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>